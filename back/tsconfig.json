{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */
    "target": "es6",
    "module": "commonjs", 
    "allowJs": true,
    "sourceMap": true,                         
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,                   
     "alwaysStrict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
     
      "@lib/*":["src/lib/*"],
      "@config/*": ["src/config/*"],
      "@joi/*": ["src/joi/*"],
      "@graphql/*": ["src/graphql/*"],
      "@tsTypes/*": ["src/tsTypes/*"],
    },
    "types": ["node"],
    "esModuleInterop": true,
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
