// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

model User {
  id          String    @id @default(dbgenerated()) @map("_id") @db.ObjectId
  email       String    @unique
  mdp         String    @unique
  name        String
  firstname   String
  avatar      String?
  description String?
  role        String[]
  project     Project[] @relation(fields: [projectId], references: [id])
  projectId   String[]  @db.Array(ObjectId)
  ticket      Ticket[]  @relation(fields: [ticketId], references: [id])
  ticketId    String[]
  comment     Comment[]
}

model Ticket {
  id            String    @id @default(dbgenerated()) @map("_id") @db.ObjectId
  name          String
  project       Project[] @relation(fields: [projectId], references: [id])
  projectId     String
  status        String?
  description   String
  user          User[]    @relation(fields: [userId], references: [id])
  userId        String[]  @db.Array(ObjectId)
  comments      Comment[]
  investedTime  String?
  estimatedTime String
  startDate     String
  endDate       String?
  ressources    String[]
  priority      String
}

model Project {
  id            String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  name          String
  author        String
  tickets       Ticket[] @relation(fields: [ticketsId], references: [id])
  ticketsId     String[]
  client        String
  status        String?
  description   String
  user          User[]   @relation(fields: [userId], references: [id])
  userId        String[] @db.Array(ObjectId)
  date          String
  investedTime  String?
  estimatedTime String
}

model Comment {
  id       String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  postDate String
  content  String
  author   User   @relation(fields: [authorId], references: [id])
  authorId String
  ticket   Ticket @relation(fields: [ticketId], references: [id])
  ticketId String
}
