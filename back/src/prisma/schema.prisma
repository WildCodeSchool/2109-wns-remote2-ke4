// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

model User {
  id Int @id @default(autoincrement()) 
  email String @unique
  mdp String @unique
  name String
  firstname String
  avatar String
  description String
  role String[]
  project UserOnProject[]
}

model Ticket {
  id Int @id @default(autoincrement())  @map("_id")
  name String
  project Project @relation(fields: [projectId], references: [id])
  projectId Int
  status String
  description String
  developpeur String[] // A REVOIR
  investedTime String // A REVOIR
  estimatedTime String  // A REVOIR
  startDate DateTime
  endDate DateTime
  ressources String[] // A REVOIR
  priority String
}

model Project {
  id Int @id @default(autoincrement()) 
  name String
  author String
  ticket Ticket[]
  client String
  status String
  description String
  user UserOnProject[]
  investedTime String // A REVOIR
  estimatedTime String  // A REVOIR
}

model UserOnProject {
  user User[] @relation(fields: [userId], references: [id])
  userId Int
  project Project[] @relation(fields: [projectId], references: [id])
  projectId Int

  @@id([userId, projectId])
}

model Comments {
  id Int @id @default(autoincrement()) 
  postDate DateTime
  content String
  idUser String
}

